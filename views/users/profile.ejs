  <script>
    $(document).ready(function(){
  
      $("#EditBtn").click(function(){
        $(".tokenSec").hide();
       $(".withInfo").show()
       $(".woInfo").hide();
       $(".cngpass").hide();
       $(".mainMsg").hide();
      });

      $("#token").click(function(){
       $(".tokenSec").show();
       $(".withInfo").hide()
       $(".woInfo").hide();
       $(".cngpass").hide();
       $(".mainMsg").hide();

      });

      $("#homeBtn").click(function(){
       $(".tokenSec").hide();
       $(".withInfo").hide();
       $(".mainMsg").hide();
       $(".woInfo").show();
       $(".cngpass").hide();
