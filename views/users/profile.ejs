                    <th class="cs-width_1 cs-semi_bold cs-primary_color cs-focus_bg">Manage</th>
              
                 
                  </tr>
                </thead>
                <tbody>
                   
                  <%for(let i=0;i<token.length;i++){%> 
                  <tr>
                    <td class="cs-width_3  cs-primary_color p-2 "><%=i+1%></td>
                    <td class="cs-width_3  cs-primary_color p-2 "><%=token[i]%></td>
                    <td class="cs-width_3  cs-primary_color p-2"><%=productInfo[i].entryDate%></td>
               
                    <td class="cs-width_2 my-2 p-2 cs-primary_color   "><a href="/profile/deletehisab/<%=token[i]%>" class="text-white bg-red-400 text-white px-4 py-1 shadow-md rounded-md">delete</a></td>
                    <td class="cs-width_2 my-2 p-2 cs-primary_color   "><a href="/profile/findhisab/<%=token[i]%>" class="text-white bg-sky-600 text-white px-4 py-1 shadow-md rounded-md">view</a></td>
                  </tr>
                  <%}%>
            

               
                </tbody>
              </table>
            </div>
            </div>
            </div>
            <%}else{%>
              <h2 class="text-red-500">No Token available Add  <a class="bg-purple-200 px-3 " href="/calculate">token</a> <i class="fa-regular fa-face-frown-open"></i></h2>
                                  <%}%>
              </div> <!-- 		End of Container -->


            </div>


            </form>
          </div>
