          <div class="col-md-12"><label class="labels">Confirm New Password</label><input name="cncpass" type="password"
              class="form-control" required placeholder="Confirm New password "  minlength="6" maxlength="25"></div>
        </div>
        <div class="mt-4 text-center">
          <input type="submit" value="change"
            class="bg-green-500 hover:bg-green-600 shadow-xl rounded-md px-4 py-2 text-white">
        </div>
      </div>
    </form>
  </div>
</div>

