            <form action="/profile/updateinfo"  method="post" class="bg-gray-50 shadow-xl rounded-md p-3 border-1">
            

              <div class="row mt-2">
                <div class="col-md-6"><label class="labels">First Name</label><input name="ufnm" type="text" class="form-control  "
                    placeholder="first name" required value="<%-userInfo.fname%>"></div>
                <div class="col-md-6"><label class="labels">Last Name</label><input required name="ulnm" type="text" class="form-control"
                    value="<%-userInfo.lname%>" placeholder="Last Name"></div>
              </div>
              <div class="row mt-2">
                <div class="col-md-6"><label class="labels">Mobile Number</label><input required unumber type="text" class="form-control"
                    placeholder="enter phone number" value=" <%-userInfo.phone%>"></div>
                <div class="col-md-6"><label class="labels">Postcode</label><input name="upcode" type="text" class="form-control"
                    placeholder="Enter Post Code" required value=" <%-userInfo.postcode%>"></div>

              </div>
              <div class="row mt-2">

                <div class="col-md-12"><label class="labels">Address Line </label><input type="text"
